{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://api.paymentservice.com/schemas/events/payment-initiated/v1.0.0",
  "title": "Payment Initiated Event",
  "description": "Schema for payment initiated events",
  "type": "object",
  "required": [
    "eventType",
    "timestamp", 
    "paymentId",
    "orderId",
    "userId",
    "amount",
    "currency",
    "status",
    "correlationId"
  ],
  "properties": {
    "eventType": {
      "type": "string",
      "const": "payment_initiated",
      "description": "Event type identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the event occurred"
    },
    "paymentId": {
      "type": "string",
      "pattern": "^pay_[a-zA-Z0-9]+$",
      "minLength": 10,
      "maxLength": 50,
      "description": "Unique payment identifier"
    },
    "orderId": {
      "type": "string",
      "pattern": "^ord_[a-zA-Z0-9]+$",
      "minLength": 10,
      "maxLength": 50,
      "description": "Associated order identifier"
    },
    "userId": {
      "type": "string",
      "pattern": "^user_[a-zA-Z0-9]+$",
      "minLength": 10,
      "maxLength": 50,
      "description": "User identifier who initiated the payment"
    },
    "amount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 999999999,
      "description": "Payment amount in minor currency units (cents)"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 currency code"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "processing"],
      "description": "Current payment status"
    },
    "correlationId": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100,
      "description": "Correlation ID for tracing related events"
    },
    "paymentMethod": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["card", "wallet", "bank_transfer"]
        },
        "last4": {
          "type": "string",
          "pattern": "^[0-9]{4}$",
          "description": "Last 4 digits for card payments"
        },
        "brand": {
          "type": "string",
          "enum": ["visa", "mastercard", "amex", "discover"],
          "description": "Card brand for card payments"
        },
        "walletType": {
          "type": "string",
          "enum": ["apple_pay", "google_pay", "paypal"],
          "description": "Wallet type for wallet payments"
        }
      },
      "description": "Payment method details"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "enum": ["web", "mobile", "api"]
        },
        "userAgent": {
          "type": "string",
          "maxLength": 500
        },
        "ipAddress": {
          "type": "string",
          "format": "ipv4"
        },
        "deviceId": {
          "type": "string",
          "maxLength": 100
        }
      },
      "description": "Additional metadata about the payment"
    },
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
      "default": "v1.0.0",
      "description": "Schema version"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "eventType": "payment_initiated",
      "timestamp": "2024-01-15T10:30:00.000Z",
      "paymentId": "pay_1234567890abcdef",
      "orderId": "ord_9876543210fedcba",
      "userId": "user_abcdef123456",
      "amount": 2999,
      "currency": "USD",
      "status": "pending",
      "correlationId": "corr_xyz789abc123",
      "paymentMethod": {
        "type": "card",
        "last4": "4242",
        "brand": "visa"
      },
      "metadata": {
        "source": "web",
        "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64)",
        "ipAddress": "192.168.1.100"
      },
      "version": "v1.0.0"
    }
  ]
}